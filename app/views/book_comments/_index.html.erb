            <% book.book_comments.each do |book_comment|%>
               <%=link_to user_path(book_comment.user_id) do%>
                 <%= attachment_image_tag book_comment.user,:profile_image,size:"25x25",fallback:"image/person.jpeg"%>
                 <%= book_comment.user.name%>
               <%end%>
               <%= book_comment.comment%>
               <% if current_user.id == book_comment.user_id %>
                <%= link_to "Destroy",book_book_comment_path(book_comment.book_id,book_comment),method: :delete,remote:true%><br>
               <%end%>
            <%end%>