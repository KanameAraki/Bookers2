<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-dark">
      <div class="container">
         <a class="navbar-brand" href="/">Bookers</a>
      <nav class="d-flex navbar navbar-expand-lg navbar-dark flex-row-reverse">
      <% if user_signed_in? %>
      <div class="d-flex navbar-nav">
      <a class="nav-link"><%= link_to "Home",user_path(:id)%></a>
      <a class="nav-link"><%= link_to "Users",users_path%></a>
      <a class="nav-link"><%= link_to "Books",books_path%></a>
      <a class="nav-link"><%= link_to "logout",destroy_user_session_path,method: :delete%></a>
      </div>
      <%else%>
      <div class="d-flex navbar-nav">
      <a class="nav-link"><%= link_to "Home",user_registration_path%></a>
      <a class="nav-link"><%= link_to "About",homes_about_path%></a>
      <a class="nav-link"><%= link_to "sign up",new_user_registration_path%></a>
      <a class="nav-link"><%= link_to "login",new_user_session_path%></a>
      </div>
      <%end%>
      </nav>
      </div>
    </header>

    <%= yield %>

    <footer>
      <p>CopyRight infratop.inc</p>
    </footer>
  </body>
</html>
