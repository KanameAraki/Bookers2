<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="bg-dark">
     <div class="container">

       <nav class="row d-flex navbar navbar-expand-lg navbar-dark">
         <a class="navbar-brand " href="/">Bookers</a>
         <div class="ml-auto">
          <% if user_signed_in? %>
          <ul class="navbar-nav">
            <%= link_to "Home",user_path(current_user), class: "text-light nav-link"%>
            <%= link_to "Users",users_path, class: "text-light nav-link"%>
            <%= link_to "Books",books_path, class: "text-light nav-link"%>
            <%= link_to "logout",destroy_user_session_path,method: :delete, class: "text-light nav-link"%>
          </ul>
          <%else%>
          <ul class="navbar-nav">
            <%= link_to "Home",root_path, class: "text-light nav-link"%>
            <%= link_to "About",homes_about_path, class: "text-light nav-link"%>
            <%= link_to "sign up",new_user_registration_path, class: "text-light nav-link"%>
            <%= link_to "login",new_user_session_path, class: "text-light nav-link"%>
          </ul>
          <%end%>
         </div>
       </nav>

     </div>
    </header>

    <%= yield %>

    <footer>
          <p class="text-center">CopyRight infratop.inc</p>
    </footer>


  </body>
</html>
