<div class = "container mt-3">
  <div class = "row">

    <%= render "users/left_bar",user:@user,book:@book %>

    <div class = "col-8">
      <h1>Book detail</h1>
      <table class = "table">
        <tr>
        <td><%= link_to @user.name,user_path(@user)%></td>
        <td><%= link_to @chose_book.title,book_path(@chose_book)%></td>
        <td><%= @chose_book.body%></td>
        <td><%= link_to "Edit",edit_book_path(@chose_book)%></td>
        <td><%= link_to "Destroy",book_path(@chose_book),method: :delete%></td>
        </tr>
      </table>
    </div>

  </div>
</div>