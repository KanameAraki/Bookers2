<div class = "container">
  <div class = "row">

    <div class = "col=5">
      <h1>user info</h1>
        <%= @user.name%>
        <%= @user.introduction%>
      <h1>new book</h1>
        <%= form_with model:@book,local:true do |f|%>
        <p>Title</p>
        <%= f.text_field :title%>
        <p>Opinion</p>
        <%= f.text_area :body%>
        <%= f.submit "Create Book"%>
        <%end%>
    </div>

    <div class = "col=7">
      <h1>Books</h1>
      <table class ="table">
        <tr>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book|%>
        <tr>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <%end%>
      </table>
    </div>

  </div>
</div>