<div class = "container mt-3">
  <div class = "row">

    <%= render "users/left_bar",user:@user,book:@book %>

    <div class = "col-8">
      <h1>Books</h1>
      <table class ="table">
        <tr>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book|%>
        <tr>
          <td><%= link_to book.title,book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <%end%>
      </table>
    </div>

  </div>
</div>